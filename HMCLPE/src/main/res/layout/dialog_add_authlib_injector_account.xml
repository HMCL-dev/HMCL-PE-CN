<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:paddingTop="30dp"
    android:paddingLeft="20dp"
    android:paddingRight="20dp"
    android:paddingBottom="10dp"
    android:layout_width="500dp"
    android:layout_height="wrap_content">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/colorPureBlack"
        android:textSize="@dimen/text_size_big"
        android:text="@string/dialog_add_authlib_injector_account_title"/>

    <LinearLayout
        android:layout_marginTop="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="@string/dialog_add_authlib_injector_account_server"
            android:textSize="@dimen/text_size_middle"
            android:textColor="@color/colorPureBlack"/>

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1"/>

        <LinearLayout
            android:layout_gravity="center"
            android:layout_width="360dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <RelativeLayout
                android:layout_gravity="center"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="36dp">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/colorLightGray"/>

                <Spinner
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/edit_server" />

            </RelativeLayout>

            <TextView
                android:layout_marginStart="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:clickable="true"
                android:id="@+id/sign_up"
                android:text="@string/dialog_add_authlib_injector_account_sign_up"
                android:textSize="12sp"
                android:textColor="@color/colorLinkBlue"/>

            <ImageButton
                android:layout_gravity="center"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="5dp"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:background="@drawable/ic_baseline_add_black"
                android:id="@+id/add_server"/>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="@string/dialog_add_authlib_injector_account_email"
            android:textSize="@dimen/text_size_middle"
            android:textColor="@color/colorPureBlack"/>

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1"/>

        <EditText
            android:textSize="@dimen/text_size_middle"
            android:paddingLeft="8dp"
            android:background="@color/colorLightGray"
            android:singleLine="true"
            android:layout_width="360dp"
            android:layout_height="36dp"
            android:layout_gravity="center"
            android:id="@+id/edit_email" />

    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="@string/dialog_add_authlib_injector_account_password"
            android:textSize="@dimen/text_size_middle"
            android:textColor="@color/colorPureBlack"/>

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1"/>

        <EditText
            android:textSize="@dimen/text_size_middle"
            android:paddingLeft="8dp"
            android:inputType="textPassword"
            android:background="@color/colorLightGray"
            android:singleLine="true"
            android:layout_width="360dp"
            android:layout_height="36dp"
            android:layout_gravity="center"
            android:id="@+id/edit_password" />

    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1"/>

        <RelativeLayout
            android:layout_width="60dp"
            android:layout_height="40dp">

            <ProgressBar
                android:visibility="gone"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_centerInParent="true"
                android:id="@+id/login_progress"/>

            <Button
                android:layout_width="60dp"
                android:layout_height="40dp"
                android:gravity="center"
                android:text="@string/dialog_add_authlib_injector_account_login"
                android:textSize="15sp"
                android:textColor="@color/colorLinkBlue"
                android:background="@drawable/launcher_button_parent"
                android:id="@+id/login_authlib"/>

        </RelativeLayout>

        <Button
            android:layout_width="60dp"
            android:layout_height="40dp"
            android:gravity="center"
            android:text="@string/dialog_add_authlib_injector_account_cancel"
            android:textSize="15sp"
            android:textColor="@color/colorPureBlack"
            android:background="@drawable/launcher_button_parent"
            android:id="@+id/cancel_login_authlib"/>

    </LinearLayout>

</LinearLayout>