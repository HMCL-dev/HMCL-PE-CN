<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:keepScreenOn="true"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.tungsten.hmclpe.control.view.LayoutPanel
        android:background="@color/colorTransparent"
        android:id="@+id/base_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.tungsten.hmclpe.control.view.TouchCharInput
            android:layout_width="1px"
            android:layout_height="1px"
            android:background="@android:color/transparent"
            android:ems="10"
            android:imeOptions="flagNoFullscreen|flagNoExtractUi|flagNoPersonalizedLearning|actionDone"
            android:inputType="textFilter|textImeMultiLine|textAutoComplete|textAutoCorrect"
            android:id="@+id/input_scanner"/>

    </com.tungsten.hmclpe.control.view.LayoutPanel>

    <RelativeLayout
        android:layout_marginTop="30dp"
        android:layout_marginBottom="30dp"
        android:layout_width="270dp"
        android:layout_height="match_parent"
        android:layout_gravity="end"
        android:id="@+id/left_navigation_view">

        <LinearLayout
            android:padding="12dp"
            android:orientation="vertical"
            android:clickable="true"
            android:focusable="true"
            android:layout_width="240dp"
            android:layout_height="match_parent"
            android:layout_marginEnd="30dp"
            android:background="@drawable/game_float_window">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/drawer_game_menu_title"
                android:textColor="@color/colorPureBlack"
                android:textSize="14sp"
                android:layout_gravity="center"/>

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/drawer_game_menu_type"
                        android:textSize="9sp"
                        android:textColor="@color/colorPureBlack"/>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1px"
                        android:background="@color/colorDarkGray"/>

                    <LinearLayout
                        android:layout_marginTop="5dp"
                        android:padding="5dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_gravity="center"
                            android:text="@string/drawer_game_menu_type_float"
                            android:textSize="12sp"
                            android:textColor="@color/colorPureBlack"/>

                        <androidx.appcompat.widget.SwitchCompat
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:id="@+id/switch_float_button"/>

                    </LinearLayout>

                    <LinearLayout
                        android:padding="5dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_gravity="center"
                            android:text="@string/drawer_game_menu_type_bar"
                            android:textSize="12sp"
                            android:textColor="@color/colorPureBlack"/>

                        <androidx.appcompat.widget.SwitchCompat
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:id="@+id/switch_bar"/>

                    </LinearLayout>

                    <LinearLayout
                        android:padding="5dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_gravity="center"
                            android:text="@string/drawer_game_menu_type_gesture"
                            android:textSize="12sp"
                            android:textColor="@color/colorPureBlack"/>

                        <androidx.appcompat.widget.SwitchCompat
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:id="@+id/switch_gesture"/>

                    </LinearLayout>

                    <LinearLayout
                        android:padding="5dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_gravity="center"
                            android:text="@string/drawer_game_menu_float_movable"
                            android:textSize="12sp"
                            android:textColor="@color/colorPureBlack"/>

                        <androidx.appcompat.widget.SwitchCompat
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:id="@+id/switch_float_movable"/>

                    </LinearLayout>

                    <TextView
                        android:layout_marginTop="5dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/drawer_game_menu_control"
                        android:textSize="9sp"
                        android:textColor="@color/colorPureBlack"/>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1px"
                        android:background="@color/colorDarkGray"/>

                    <LinearLayout
                        android:layout_marginTop="5dp"
                        android:padding="5dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_gravity="center"
                            android:text="@string/drawer_game_menu_control_advance_input"
                            android:textSize="12sp"
                            android:textColor="@color/colorPureBlack"/>

                        <androidx.appcompat.widget.SwitchCompat
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:id="@+id/switch_advance_input"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_marginTop="5dp"
                        android:padding="5dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_gravity="center"
                            android:text="@string/drawer_game_menu_control_half_screen"
                            android:textSize="12sp"
                            android:textColor="@color/colorPureBlack"/>

                        <androidx.appcompat.widget.SwitchCompat
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:id="@+id/switch_half_screen"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_marginTop="5dp"
                        android:padding="5dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_gravity="center"
                            android:text="@string/drawer_game_menu_control_sensor"
                            android:textSize="12sp"
                            android:textColor="@color/colorPureBlack"/>

                        <androidx.appcompat.widget.SwitchCompat
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:id="@+id/switch_control_sensor"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_marginTop="5dp"
                        android:padding="5dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:singleLine="true"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_gravity="center"
                            android:text="@string/drawer_game_menu_control_sensor_sensitivity"
                            android:textSize="12sp"
                            android:textColor="@color/colorPureBlack"/>

                        <TextView
                            android:id="@+id/sensitivity_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:textSize="12sp"
                            android:textColor="@color/colorPureBlack"/>

                    </LinearLayout>

                    <SeekBar
                        android:layout_marginTop="5dp"
                        android:max="30"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/sensor_sensitivity"/>

                    <LinearLayout
                        android:layout_marginTop="5dp"
                        android:padding="5dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:singleLine="true"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_gravity="center"
                            android:text="@string/drawer_game_menu_control_touch_mode"
                            android:textSize="12sp"
                            android:textColor="@color/colorPureBlack"/>

                        <Spinner
                            android:layout_marginStart="10dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:id="@+id/spinner_touch_mode"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_marginTop="5dp"
                        android:padding="5dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:singleLine="true"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_gravity="center"
                            android:text="@string/drawer_game_menu_control_mouse_mode"
                            android:textSize="12sp"
                            android:textColor="@color/colorPureBlack"/>

                        <Spinner
                            android:layout_marginStart="10dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:id="@+id/spinner_mouse_mode"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_marginTop="5dp"
                        android:padding="5dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:singleLine="true"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_gravity="center"
                            android:text="@string/drawer_game_menu_control_mouse_speed"
                            android:textSize="12sp"
                            android:textColor="@color/colorPureBlack"/>

                        <TextView
                            android:id="@+id/mouse_speed_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:textSize="12sp"
                            android:textColor="@color/colorPureBlack"/>

                        <TextView
                            android:layout_marginStart="3dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:text="%"
                            android:textSize="12sp"
                            android:textColor="@color/colorPureBlack"/>

                    </LinearLayout>

                    <SeekBar
                        android:layout_marginTop="5dp"
                        android:max="1000"
                        android:min="100"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/mouse_speed"/>

                    <LinearLayout
                        android:layout_marginTop="5dp"
                        android:padding="5dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:singleLine="true"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_gravity="center"
                            android:text="@string/drawer_game_menu_control_mouse_size"
                            android:textSize="12sp"
                            android:textColor="@color/colorPureBlack"/>

                        <TextView
                            android:id="@+id/mouse_size_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:textSize="12sp"
                            android:textColor="@color/colorPureBlack"/>

                        <TextView
                            android:layout_marginStart="3dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:text="dp"
                            android:textSize="12sp"
                            android:textColor="@color/colorPureBlack"/>

                    </LinearLayout>

                    <SeekBar
                        android:layout_marginTop="5dp"
                        android:max="30"
                        android:min="0"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/mouse_size"/>

                    <TextView
                        android:layout_marginTop="5dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/drawer_game_menu_ui"
                        android:textSize="9sp"
                        android:textColor="@color/colorPureBlack"/>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1px"
                        android:background="@color/colorDarkGray"/>

                    <LinearLayout
                        android:padding="5dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_gravity="center"
                            android:text="@string/drawer_game_menu_ui_hide"
                            android:textSize="12sp"
                            android:textColor="@color/colorPureBlack"/>

                        <androidx.appcompat.widget.SwitchCompat
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:id="@+id/switch_hide_ui"/>

                    </LinearLayout>

                    <TextView
                        android:layout_marginTop="5dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/drawer_game_menu_extra"
                        android:textSize="9sp"
                        android:textColor="@color/colorPureBlack"/>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1px"
                        android:background="@color/colorDarkGray"/>

                    <LinearLayout
                        android:layout_marginTop="5dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_weight="1"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:text="@string/drawer_game_menu_force_exit"
                            android:textSize="12sp"
                            android:textColor="@color/colorPureBlack"
                            android:singleLine="true"
                            android:layout_gravity="center"/>

                        <Button
                            android:layout_width="40dp"
                            android:layout_height="30dp"
                            android:layout_gravity="center"
                            android:text="@string/drawer_game_menu_force_exit_button"
                            android:textColor="@color/colorAccent"
                            android:textSize="12sp"
                            android:gravity="center"
                            android:background="@drawable/launcher_setting_button"
                            android:id="@+id/force_exit"/>

                    </LinearLayout>

                </LinearLayout>

            </ScrollView>

        </LinearLayout>

    </RelativeLayout>

    <RelativeLayout
        android:layout_marginTop="30dp"
        android:layout_marginBottom="30dp"
        android:layout_width="270dp"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:id="@+id/right_navigation_view">

        <LinearLayout
            android:padding="12dp"
            android:orientation="vertical"
            android:clickable="true"
            android:focusable="true"
            android:layout_width="240dp"
            android:layout_height="match_parent"
            android:layout_marginStart="30dp"
            android:background="@drawable/game_float_window">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/drawer_custom_menu_title"
                android:textColor="@color/colorPureBlack"
                android:textSize="14sp"
                android:layout_gravity="center"/>

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/drawer_custom_menu_current"
                        android:textSize="9sp"
                        android:textColor="@color/colorPureBlack"/>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1px"
                        android:background="@color/colorDarkGray"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="5dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/drawer_custom_menu_current_pattern"
                            android:textSize="12sp"
                            android:textColor="@color/colorPureBlack"
                            android:singleLine="true"
                            android:layout_gravity="center"/>

                        <Spinner
                            android:layout_marginStart="10dp"
                            android:layout_gravity="center"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:id="@+id/current_pattern_spinner"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_marginTop="5dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_weight="1"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:text="@string/drawer_custom_menu_mode"
                            android:textSize="12sp"
                            android:textColor="@color/colorPureBlack"
                            android:singleLine="true"
                            android:layout_gravity="center"/>

                        <androidx.appcompat.widget.SwitchCompat
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:id="@+id/switch_edit_mode"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_marginTop="5dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_weight="1"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:text="@string/drawer_custom_menu_outline"
                            android:textSize="12sp"
                            android:textColor="@color/colorPureBlack"
                            android:singleLine="true"
                            android:layout_gravity="center"/>

                        <androidx.appcompat.widget.SwitchCompat
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:id="@+id/switch_show_outline"/>

                    </LinearLayout>

                    <TextView
                        android:layout_marginTop="5dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/drawer_custom_menu_pattern_setting"
                        android:textSize="9sp"
                        android:textColor="@color/colorPureBlack"/>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1px"
                        android:background="@color/colorDarkGray"/>

                    <LinearLayout
                        android:layout_marginTop="5dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_weight="1"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:text="@string/drawer_custom_menu_info"
                            android:textSize="12sp"
                            android:textColor="@color/colorPureBlack"
                            android:singleLine="true"
                            android:layout_gravity="center"/>

                        <Button
                            android:layout_width="40dp"
                            android:layout_height="30dp"
                            android:layout_gravity="center"
                            android:text="@string/drawer_custom_menu_edit_info"
                            android:textColor="@color/colorAccent"
                            android:textSize="12sp"
                            android:gravity="center"
                            android:background="@drawable/launcher_setting_button"
                            android:id="@+id/edit_pattern_info"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_marginTop="5dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_weight="1"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:text="@string/drawer_custom_menu_child_layout"
                            android:textSize="12sp"
                            android:textColor="@color/colorPureBlack"
                            android:singleLine="true"
                            android:layout_gravity="center"/>

                        <Button
                            android:layout_width="40dp"
                            android:layout_height="30dp"
                            android:layout_gravity="center"
                            android:text="@string/drawer_custom_menu_child_manager"
                            android:textColor="@color/colorAccent"
                            android:textSize="12sp"
                            android:gravity="center"
                            android:background="@drawable/launcher_setting_button"
                            android:id="@+id/manage_child_layout"/>

                    </LinearLayout>

                    <TextView
                        android:layout_marginTop="5dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/drawer_custom_menu_child_setting"
                        android:textSize="9sp"
                        android:textColor="@color/colorPureBlack"/>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1px"
                        android:background="@color/colorDarkGray"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="5dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/drawer_custom_menu_current_child"
                            android:textSize="12sp"
                            android:textColor="@color/colorPureBlack"
                            android:singleLine="true"
                            android:layout_gravity="center"/>

                        <Spinner
                            android:layout_marginStart="10dp"
                            android:layout_gravity="center"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:id="@+id/current_child_spinner"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_marginTop="5dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_weight="1"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:text="@string/drawer_custom_menu_view"
                            android:textSize="12sp"
                            android:textColor="@color/colorPureBlack"
                            android:singleLine="true"
                            android:layout_gravity="center"/>

                        <Button
                            android:layout_width="40dp"
                            android:layout_height="30dp"
                            android:layout_gravity="center"
                            android:text="@string/drawer_custom_menu_add_view"
                            android:textColor="@color/colorAccent"
                            android:textSize="12sp"
                            android:gravity="center"
                            android:background="@drawable/launcher_setting_button"
                            android:id="@+id/add_view"/>

                    </LinearLayout>

                </LinearLayout>

            </ScrollView>

        </LinearLayout>

    </RelativeLayout>

</androidx.drawerlayout.widget.DrawerLayout>